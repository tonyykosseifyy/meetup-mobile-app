{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard",
    "plugin:prettier/recommended" // Adds plugin:prettier/recommended as the last configuration in the extends array
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // Custom ESLint rules can be added here
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the react version
    }
  }
}
